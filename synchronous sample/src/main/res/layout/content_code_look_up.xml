<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="rapidandroidsdk.sdk.payment.eway.com.synchronoussample.CodeLookUpActivity"
    tools:showIn="@layout/activity_code_look_up">
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="Errors Code (Comma separated)" />

    <EditText
        android:id="@+id/errorCodes"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="0dp"
        android:ellipsize="start"
        android:ems="10"
        android:gravity="center"
        android:inputType="text">

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="SubmitCode"
        android:textColor="#e3e3e3"
        android:textSize="20dp"
        android:layout_marginTop="28dp"
        android:layout_below="@+id/errorCodes"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/nextPageCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="To First Page"
        android:textColor="#e3e3e3"
        android:textSize="20dp"
        android:layout_alignTop="@+id/submit"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
